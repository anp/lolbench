[alias]
new-bench-crate='run -- generate-crate'

core-flow = "watch -x fmt-core -x build-all -x test-core"

fmt-core='''
fmt
    --package lolbench
    --package lolbench_extractor
    --package lolbench_support
    --package marky_mark
'''

build-website='run -- build-website'
rebalance-benchmarks='run -- rebalance-benchmarks'

build-all='build --all --all-targets'
test-all='test --all --all-targets --release'
test-core='''
test
    --package lolbench
    --package lolbench_extractor
    --package lolbench_support
    --package marky_mark
'''
